<h1>Add new Recipes</h1>


<form action="/auth/addRecipes" method="POST" role="form">
	<legend>Add a Recipe!</legend>

	<div class="form-group">
		<label for="name">Recipe Name</label>
		<input type="name" class="form-control" id="name" name="email" placeholder="Name of Recipe">
	</div>

	<div class="form-group">
		<label for="ingredients">Ingredients</label>
		<input type="ingredients" class="form-control" id="ingredients" name="ingredients" placeholder="Type your Ingredients">
	</div>

		<div class="form-group">
		<label for="directions">Directions</label>
		<input type="text" class="form-control" id="directions" name="directions" placeholder="Type the Directions">

	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>
